worker_processes  1;
daemon off;

events {
  worker_connections  1024;
}


http {
  include       mime.types;
  default_type  application/octet-stream;

  sendfile           on;
  keepalive_timeout  65;

  server {
    listen           <%= ENV['PORT'] %>;
    server_name      localhost;

    location / {
      root www;
      expires 180s;
      add_header Vary Accept-Encoding;
    }
  }

}
